.clearLastValue {
    border-radius: var(--border-radius);
    border: 1px solid #ced4da;
    resize: none;
    font-size: 16px;
    box-shadow: var(--box-shadow);
    transition: border-color 0.3s;
    margin-bottom: 10px;
}

/* Conversation History Styles */
.conversation-history {
    margin-top: 15px;
    border-top: 1px solid #ddd;
    padding-top: 10px;
}

.conversation-history h4 {
    margin-bottom: 8px;
    color: var(--primary-color);
    font-size: 14px;
}

.history-list {
    max-height: 200px;
    overflow-y: auto;
    border: 1px solid #e0e0e0;
    border-radius: var(--border-radius);
    padding: 8px;
    background-color: #fafafa;
}

.history-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 6px 8px;
    margin-bottom: 4px;
    border-radius: 4px;
    font-size: 12px;
    line-height: 1.3;
    cursor: pointer;
    transition: background-color 0.2s;
}

.history-item:hover {
    background-color: #e9ecef;
}

.history-item.user {
    background-color: #e3f2fd;
    border-left: 3px solid #2196f3;
}

.history-item.model {
    background-color: #f3e5f5;
    border-left: 3px solid #9c27b0;
}

.history-content {
    flex: 1;
    margin-right: 8px;
    word-wrap: break-word;
}

.history-content .full-text {
    display: none;
    position: absolute;
    background: white;
    border: 1px solid #ccc;
    padding: 8px;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    max-width: 300px;
    font-size: 11px;
}

.history-item:hover .full-text {
    display: block;
}

.history-content .truncated {
    display: block;
}

.history-remove-btn {
    background: #ff4444;
    color: white;
    border: none;
    border-radius: 3px;
    padding: 2px 6px;
    font-size: 10px;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
}

.history-remove-btn:hover {
    opacity: 1;
}

.history-index {
    font-weight: bold;
    margin-right: 5px;
    color: #666;
}

/* Bulk selection styles */
.history-item.selected {
    background-color: #fff3cd;
    border-left: 3px solid #ffc107;
}

.bulk-controls {
    margin-top: 10px;
    padding: 8px;
    background-color: #f8f9fa;
    border-radius: var(--border-radius);
    border: 1px solid #dee2e6;
}

.bulk-select-btn {
    background-color: #6c757d;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 11px;
    cursor: pointer;
    margin-right: 5px;
}

.bulk-remove-btn {
    background-color: #dc3545;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 11px;
    cursor: pointer;
}

.bulk-clear-btn {
    background-color: #6c757d;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 11px;
    cursor: pointer;
    margin-left: 5px;
}

/* Style for the conversation history container */
.conversation-history {
    margin-top: 15px;
    border-top: 1px solid #ccc;
    padding-top: 10px;
    max-height: 20%;
    overflow: scroll;
}

.history-list {
    max-height: 100%;
    /* Adjust as needed */
    overflow-y: auto;
    /* (a) Make it scrollable */
    border: 1px solid #eee;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 5px;
    font-size: 0.9em;
    word-break: break-word;
    /* Ensure long words wrap */
}

/* Individual message styling */
.history-message {
    margin-bottom: 8px;
    line-height: 1.4;
    padding: 3px 0;
}

.history-message-number {
    font-weight: bold;
    color: #555;
    margin-right: 5px;
}

.history-user-message .history-message-role {
    color: #007bff;
    /* Blue for user */
    font-weight: bold;
    word-break: keep-all;
}

.history-model-message .history-message-role {
    color: #28a745;
    /* Green for model */
    font-weight: bold;
    word-break: keep-all;
}

.history-message-content {
    color: #333;
}

